{% extends "partials/base.html.twig" %}
{% block title %}SignUp{% endblock %}

{% block content %}
    
    {% if completed %}
<div class="account">
        <h1>Thanks for signing up</h1>
            <a href="/login">Click here to login</a>
</div>
    {% else %}

        <div class="signup">
        <form action="/signup" method="post" onsubmit="return check_info()" novalidate>
        <ul>
            <li>
                <label>
                    <b>Username</b>
                    <input type="text" placeholder="Enter Username" name="username" required id="username" required>
                </label>
            </li>

            <li>
                <label>
                    <b>Email</b>
                    <input type="email" placeholder="Email Address" name="email" required id="txtEmail" required>
                </label>    
            </li>

            <li>
                <label>
                    <b>Password</b>
                    <input type="password" placeholder="Enter Password" name="password" required id="password" required>
                </label>
            </li>

            <li>
                <label>
                    <b>Confirm password</b>
                    <input type="password" placeholder="Retype Password" name="passwordcheck" required id="passwordcheck" required>
                </label>    
            </li>
            
            <li>
                    <button type="submit" name="submit">Signup</button>
            </li>
        </ul>
<script type="text/javascript" src="/js/signup.js"></script>
    </form>
    </div>
    {% endif %}

{% endblock %}
